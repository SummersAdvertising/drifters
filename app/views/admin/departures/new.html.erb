<header>
  <h2 class="left">建立 Departure<span>/ <%= "#{@tour.name}"%></span></h2>  
  <nav class="left">
    
  </nav>
</header>
<article>
  
    <%= form_for(@departure, :url => admin_tour_departures_path(@tour), html: { id: "newthisdeparture" } ) do |f| %>
    <div class="form">
      <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr>
          <td width="7%">名稱：</td>
          <td width="31%">
            <%= f.text_field :name , class: 'text' %><br>
          </td>
          <td width="2%">&nbsp;</td>
          <td width="7%">篩選期間：</td>
          <td width="53%">
            <%= f.select :filter_type, options_for_select([['-- 請選擇 --',nil],['所有(不分類)','1'], ['到年底', '2'], ['明年出發','3']], nil), class: 'text' %>
            <br>
          </td>
        </tr>
        <tr>
          <td valign="top">URL：</td>
          <td colspan="4">
            <%= f.text_field :url , class: 'text' %>
            <%= f.hidden_field :tour_id, value: @tour.id %>
            <%# f.select :tour_id, options_from_collection_for_select(@tours ,
                  "id", "name", @tour.id ) ,{:prompt => '-- 請選擇 --'}, class: 'text' %>
          </td>
        </tr>
      </table>
    </div>
    <!--form-->
    <div class="button"> 
      <%= link_to image_tag("/images/admin/left.png")+"返回", admin_tour_departures_path(@tour), class: "left" %>
      <%= content_tag :button, type: :submit, class: 'right highlight' do %>
          儲存<img src="/images/admin/save.png">
      <% end %>
    </div>

  <% end %>
</article>

